{% extends "base.twig" %}

{% block title %}Blog - {{ article.title }}{% endblock %}
{% block head %}
	{{ parent() }}
{% endblock %}
{% block content %}
	<h1><a href="{{ path('article', {article_id: article.id}) }}">{{ article.title }}</a></h1>
	<h3>by {{ article.author.username }}, on {{ article.date | date("d/m/Y H:i") }}</h3>
	<p>
		{{ article.content }}
	</p>

	{% if app.session.get('author_id') == article.author.id %}
	<p>
		<a href="{{ path('editArticle', {article_id: article.id}) }}">Edit</a>
	</p>
	{% endif %}

{% endblock %}